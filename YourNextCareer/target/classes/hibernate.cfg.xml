<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/jobportal</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>

		<property name="hibernate.hbm2ddl.auto">create-update</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>

		<mapping class="com.neu.yournextcareer.pojo.JobSeeker" />
		<mapping class="com.neu.yournextcareer.pojo.Person" />
		<mapping class="com.neu.yournextcareer.pojo.Employer" />
		<mapping class="com.neu.yournextcareer.pojo.Job" />
		<mapping class="com.neu.yournextcareer.pojo.Applications" />
		<mapping class="com.neu.yournextcareer.pojo.Resume" />
	
	</session-factory>
</hibernate-configuration>
